{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "outDir": "lib",
        "sourceMap": true,
        "strict": true,
        "target": "es2017",
        "moduleResolution": "node",
        "types": ["jest", "node"]
    },
    "compileOnSave": true,
    "include": ["src", "src/__tests__/**/*", "src/__tests__/setupTests.js"],
    "exclude": ["node_modules"]
}
