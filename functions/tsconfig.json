{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "outDir": "lib",
        "sourceMap": true,
        "strict": true,
        "target": "es2017",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "types": ["jest", "node"]
    },
    "compileOnSave": true,
    "include": ["src"],
    "exclude": ["src/**/*.test.ts", "src/__tests__/**/*"]
}
